@model Project_SE.Models.Bike

@{
    ViewData["Title"] = "Ștergere Bicicletă";
}

<h1>Ștergere Bicicletă</h1>

<h3>Sunteți sigur că doriți să ștergeți această bicicletă?</h3>
<div class="mt-4">
    <dl class="row">
        <dt class="col-sm-3">Model:</dt>
        <dd class="col-sm-9">@Model.Model</dd>

        <dt class="col-sm-3">Tip:</dt>
        <dd class="col-sm-9">@Model.Type</dd>

        <dt class="col-sm-3">Preț/zi:</dt>
        <dd class="col-sm-9">@Model.Price RON</dd>

        <dt class="col-sm-3">Status:</dt>
        <dd class="col-sm-9">
            <span class="badge @(Model.Status == "Disponibil" ? "bg-success" : "bg-warning")">
                @Model.Status
            </span>
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Șterge" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Anulează</a>
    </form>
</div>