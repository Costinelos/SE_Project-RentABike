@model Project_SE.Models.Bike

@{
    ViewData["Title"] = "Detalii Bicicletă";
}

<div class="container mt-4">
    <h1>Detalii Bicicletă</h1>

    <div class="card">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Model">
        }
        <div class="card-body">
            <h4 class="card-title">@Model.Model</h4>
            <dl class="row">
                <!-- ... existing details ... -->
            </dl>
        </div>
        <div class="card-footer">
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
            }
            <a asp-action="Index" class="btn btn-secondary">Înapoi la listă</a>
        </div>
    </div>
</div>