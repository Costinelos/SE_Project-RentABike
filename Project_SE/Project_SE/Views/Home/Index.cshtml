@{
    ViewData["Title"] = "RentABike - Acasă";
}

<!-- Hero Section -->
<section class="hero-section text-white text-center py-5">
    <div class="container py-5">
        <h1 class="display-4 fw-bold mb-4">Explorează orașul pe două roți</h1>
        <p class="lead mb-5">Închiriază biciclete de calitate la prețuri accesibile</p>
        <a asp-controller="Bike" asp-action="Index" class="btn btn-primary btn-lg px-4">Vezi bicicletele disponibile</a>
    </div>
</section>

<!-- Features Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <div class="feature-icon bg-primary bg-gradient text-white rounded-circle p-3 mb-3 mx-auto">
                    <i class="fas fa-bolt fa-lg"></i>
                </div>
                <h3>Rezervare rapidă</h3>
                <p>Doar 3 clikuri și bicicleta ta este pregătită</p>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-icon bg-primary bg-gradient text-white rounded-circle p-3 mb-3 mx-auto">
                    <i class="fas fa-euro-sign fa-lg"></i>
                </div>
                <h3>Prețuri mici</h3>
                <p>De la 20 RON/zi fără taxe ascunse</p>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-icon bg-primary bg-gradient text-white rounded-circle p-3 mb-3 mx-auto">
                    <i class="fas fa-map-marker-alt fa-lg"></i>
                </div>
                <h3>Peste tot în oraș</h3>
                <p>Puncte de ridicare în toate cartierele</p>
            </div>
        </div>
    </div>
</section>

<!-- Bike Preview -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-5">Cele mai populare biciclete</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="https://images.unsplash.com/photo-1511994298241-608e28f14fde?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" class="card-img-top" alt="MTB">
                    <div class="card-body">
                        <h5 class="card-title">MTB Rockrider</h5>
                        <p class="card-text">Perfectă pentru teren accidentat</p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <a href="#" class="btn btn-outline-primary">De la 80 RON/zi</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="https://images.unsplash.com/photo-1485965120184-e220f721d03e?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" class="card-img-top" alt="Road">
                    <div class="card-body">
                        <h5 class="card-title">Triban RC100</h5>
                        <p class="card-text">Pentru viteza pe asfalt</p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <a href="#" class="btn btn-outline-primary">De la 100 RON/zi</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="https://images.unsplash.com/photo-1571068316344-75bc76f77890?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" class="card-img-top" alt="Urban">
                    <div class="card-body">
                        <h5 class="card-title">Bicicletă Urbană</h5>
                        <p class="card-text">Confortabilă pentru oraș</p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <a href="#" class="btn btn-outline-primary">De la 60 RON/zi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="py-5 bg-primary text-white">
    <div class="container text-center">
        <h2 class="mb-4">Gata să pedalezi?</h2>
        <a asp-controller="Bike" asp-action="Index" class="btn btn-light btn-lg px-4">Închiriază acum</a>
    </div>
</section>